{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Navbar.tsx", "pages/_document.tsx", "pages/_app.tsx", "pages/index.tsx", "pages/enter.tsx", "pages/api/hello.ts", "pages/admin/index.tsx", "pages/admin/[slug].tsx", "pages/[username]/[slug].tsx", "pages/[username]/index.tsx", "lib/firebase.ts", "lib/hooks.ts", "components/Loader.tsx", "components/ImageUploader.tsx"],
  "exclude": ["node_modules"]
}
